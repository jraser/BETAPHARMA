



<h1>CATEGORIA</h1>
<div class="page-bar blue-dark">


    <a ng-click="Create()" class="btn default">
        Nuevo
    </a>
    <a ng-click="Edit()" class="btn default">
        Modificar
    </a>
    <a ng-click="Delete()" class="btn default">
        Desactivar
    </a>
</div>






<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue-dark ">

            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Búsqueda Categoria
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>

                    <a href="" class="reload">
                    </a>

                </div>
            </div>







            <div class="portlet-body" id="blockui_List_portlet_body">
                <div class="table-responsive">


                    <div class="col-md-13 portlet-body  ">


                        <form role="form" class="form-inline" name="FormGrupoList">

                            <div class="form-group">
                                <label class="control-label">Nombre</label>
                                <input type="text" class="form-control input-medium"
                                       ng-model="parameters.Nombre">
                            </div>







                            <div class="form-group">
                                <button type="submit" class="btn blue-dark" ng-click="List()">Buscar</button>
                            </div>

                        </form>


                    </div>



                    <div>
                        <div class="row">

                        </div>

                    </div>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Estado
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in CategoriaList">

                                <td> {{item.Nombre}} </td>
                                <td> {{item.Estado}} </td>

                               
                                <td align="center">
                                    <input type="checkbox"
                                           ng-click="select(item.ID_Categoria)">
                                </td>


                            </tr>

                        </tbody>
                    </table>



                </div>
            </div>

        </div>



    </div>
</div>











