
<div>

    <div class="portlet box blue-dark ">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>

               Categoria
            </div>
            <div class="tools">
                <a href="" class="collapse">
                </a>

                <a href="" class="reload">
                </a>

            </div>

        </div>
        <div class="portlet-body form">
            <form class="form-horizontal" role="form" >
                <div class="form-body">
                    <div class="form-group" >
                        <label class="col-md-3 control-label">Nombre </label>
                        <div class="col-md-9">
                            <input type="text" maxlength="50" ng-required="true" id="nom" oninput="validacion('nom')" class="form-control input-inline input-medium"
                                   ng-model="New.Nombre">

                        </div>
                    </div>




                </div>


                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn blue-dark" ng-click="SaveNew()" ng-disabled="!New.Nombre">Grabar</button>
                            <button type="button" class="btn default" ng-click="Cancel()">Cancelar</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    


</div>


<script>
    function validacion(id) {
        var elem = document.getElementById(id);
        if (elem.checkValidity(""))
            elem.style.borderWidth = "2px",
            elem.style.borderColor = "blue";

        else
            elem.style.borderColor = "Red";
    }
</script>

















