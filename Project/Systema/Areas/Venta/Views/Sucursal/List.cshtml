<h1>SUCURSAL</h1>
<div class="page-bar blue-dark">
    <a ng-click="Create()" class="btn default">
        Nuevo
    </a>
    <a ng-click="Edit()" class="btn default">
        Modificar
    </a>
    <a ng-click="DeleteS()" class="btn default">
        Desactivar
    </a>
</div>






<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue-dark ">

            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Sucursal
                </div>
                <div class="tools">
                    <a href="" class="collapse">
                    </a>

                    <a href="" class="reload">
                    </a>

                </div>
            </div>







            <div class="portlet-body" id="blockui_List_portlet_body">
                <div class="table-responsive">
                 
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Nombre</th>
                                <th>Dirección</th>
                                <th>Estado</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in SucursalList">

                                <td> {{item.Descripcion_Sucursal}} </td>
                                <td> {{item.Direccion}} </td>
                                <td> {{item.Estado}} </td>

                                <td align="center">
                                    <input type="checkbox"
                                           ng-click="select(item.ID_Sucursal)">
                                </td>


                            </tr>

                        </tbody>
                    </table>



                </div>
            </div>

        </div>



    </div>
</div>











