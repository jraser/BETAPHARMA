<h1>Orden de Venta</h1>
<div class="page-bar blue-dark">

    <a ng-click="Create()" class="btn default">Nuevo</a>
    <a ng-click="Edit()" class="btn default">Modificar</a>

</div>
<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue-dark ">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Búsqueda
                </div>
                <div class="tools">
                    <a href="" class="collapse"></a>
                    <a href="" class="reload"></a>
                </div>
            </div>
            <div class="portlet-body" id="blockui_List_portlet_body">
                <div class="table-responsive">
                    <div class="col-md-13 portlet-body  ">
                        <form role="form" class="form-inline" name="FormOVList">
                            <div class="form-group">
                                <label class="control-label">Empresa</label>
                                <input type="text" class="form-control input-medium" placeholder=""
                                       ng-model="parameters.Nombres_Socio">

                                <label class="control-label">Fecha Inicio</label>
                                <input name="FechaInI" type="text" class="form-control input-inline input-medium" datepicker-popup="dd/MM/yyyy"
                                       ng-model="parameters.FechaInI"
                                       is-open="opened" min-date="minDate" max-date="'2019-06-22'"
                                       ng-required="true" close-text="Close" disabled />
                                <span class=""><button type="button" class="btn btn-default" ng-click="open($event)" ng-disabled="disabled"><i class="glyphicon glyphicon-calendar"></i></button></span>

                                <label class="control-label">Fecha Fin</label>
                                <input name="FechaFin" type="text" class="form-control input-inline input-medium" datepicker-popup="dd/MM/yyyy"
                                       ng-model="parameters.FechaFin"
                                       is-open="opened1" min-date="minDate" max-date="'2019-06-22'" datepicker-options="dateOptions"
                                       ng-required="true" close-text="Close" disabled />
                                <span class=""><button type="button" class="btn btn-default" ng-click="open1($event)" ng-disabled="disabled"><i class="glyphicon glyphicon-calendar"></i></button></span>

                                <label class="control-label">Estado</label>
                                <select ng-model="parameters.Descripcion" class="form-control">
                                    <option value='%'>Todos</option>
                                    <option value='P'>En Proceso</option>
                                    <option value='A'>Aprobada</option>
                                    <option value='I'>Anulada</option>
                                </select>
                                <button type="submit" class="btn blue-dark" ng-click="List()">Buscar</button>
                            </div>

                        </form>
                    </div>
                    <div>
                        <div class="row">
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Fecha</th>
                                <th>Socio</th>
                                <th>Total</th>
                                <th>Estado</th>
                                <th>Situación</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in OrdenList">
                                <td>{{item.ID_Orden}}</td>
                                <td>{{item.FechaEmision}}</td>
                                <td>{{item.Nombres_Socio}}</td>
                                <td>{{item.Total}}</td>
                                <td>{{item.Descripcion}}</td>
                                <td>{{item.Situacion}}</td>

                                <td align="center">
                                    <input type="checkbox" ng-click="select(item.ID_Orden)">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>











