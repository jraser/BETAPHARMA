

<div class="modal-header">
    <h3 class="modal-title">Precio</h3>
</div>
<div class="modal-body">
    <form class="form-horizontal">


        <div class="form-group">
            <label class="col-md-3 control-label">Precio Compra</label>
            <div class="col-md-9">
                <div class="input-group">
                    <span class="input-group-addon">S/.</span>
             
                    <input type="number" min="0" name="valor1" id="valor1"  ng-model="New.PC" ng-required="true" onkeypress="return soloNumeros(event)">
                    </div>
               
            </div>
        </div>



        <div class="form-group">
            <label class="col-md-3 control-label">Precio Venta</label>
            <div class="col-md-9">
                <div class="input-group">
                    <span class="input-group-addon">S/.</span>
                    <input type="number" min="0" name="valor2" id="valor2" ng-model="New.PV" ng-required="true" onkeypress="return soloNumeros(event)">
                </div>
            </div>
        </div>



        <div class="form-group">
            <label class="col-md-3 control-label">Proveedor</label>

            <div class="col-md-6">
                <div class="input-icon right">
                   
                  

                    <select ng-model="New.ID_Socio" class="form-control"
                            data-ng-options="a.ID_Socio as a.Nombres_Socio for a in SocioList" ng-required="true"></select>
                </div>
            </div>
        </div>



    </form>

</div>
<div class="modal-footer">
    <button class="btn btn-primary" ng-click="ok()" ng-disabled="!New.PC || !New.PV || !New.ID_Socio">Aceptar</button>
    <button class="btn btn-warning" ng-click="cancel()">cancelar</button>
</div>




<script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
<script>
    (function ($) {
        $.fn.currencyInput = function () {
            this.each(function () {
                var wrapper = $("<div class='currency-input' />");
                $(this).wrap(wrapper);
                $(this).before("<span class='currency-symbol'>$</span>");
                $(this).change(function () {
                    var min = parseFloat($(this).attr("min"));
                    var max = parseFloat($(this).attr("max"));
                    var value = this.valueAsNumber;
                    if (value < min)
                        value = min;
                    else if (value > max)
                        value = max;
                    $(this).val(value.toFixed(2));
                });
            });
        };
    })(jQuery);

    $(document).ready(function () {
        $('input.currency').currencyInput();
    });
</script>

<script type="text/javascript">
    // Solo permite ingresar numeros.
    function soloNumeros(e) {
        var key = window.Event ? e.which : e.keyCode
        return ((key >= 48 && key <= 57) || (key == 46))
    }
</script>




<script language="JavaScript" type="text/JavaScript">
    function envia(obj) {
        if (
        (parseInt(document.getElementById("valor1").value, 10) < parseInt(document.getElementById("valor2").value, 10))
        && !isNaN(parseInt(document.getElementById("valor1").value, 10))
        && !isNaN(parseInt(document.getElementById("valor2").value, 10))
        ) {
            obj.submit();
        } else {
            alert("El valor 2 no es mayor que el valor 1");
        }
    }
</script>







