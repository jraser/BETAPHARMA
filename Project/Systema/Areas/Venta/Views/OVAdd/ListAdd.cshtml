
<div class="portlet-body">
    <div class="table-responsive">
        <div class="col-md-12 portlet-body  ">
            <div class="modal-header">
                <h3 class="modal-title">Búsqueda de Orden</h3>
            </div>
            <div class="modal-body">
                <form role="form">

                    <div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">Fecha de Inicio</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-inline input-medium" datepicker-popup="dd/MM/yyyy"
                                       ng-model="parameters.FechaInI" value="{{New.Fchope | date:'dd/MM/yyyy'}}"
                                       is-open="opened1" min-date="minDate" max-date="'2019-06-22'" datepicker-options="dateOptions"
                                       ng-required="true" close-text="Close" disabled ng-change="DescuentoListar()" />
                                <span class=""><button type="button" class="btn btn-default" ng-click="open1($event)" ng-disabled="disabled"><i class="glyphicon glyphicon-calendar"></i></button></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">Fecha de Fin</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control input-inline input-medium" datepicker-popup="dd/MM/yyyy"
                                       ng-model="parameters.FechaFin" value="{{New.Fchope | date:'dd/MM/yyyy'}}"
                                       is-open="opened" min-date="minDate" max-date="'2019-06-22'" datepicker-options="dateOptions"
                                       ng-required="true" close-text="Close" disabled ng-change="DescuentoListar()" />
                                <span class=""><button type="button" class="btn btn-default" ng-click="open($event)" ng-disabled="disabled"><i class="glyphicon glyphicon-calendar"></i></button></span>
                            </div>
                        </div>




                        <div class="form-group">
                            <button type="submit" class="btn green" ng-click="ListOrden()">Buscar</button>


                        </div>


                </form>
            </div>
            <table class="table <!--table-striped--> table-bordered table-advance table-hover">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Fecha
                        </th>
                        <th>
                            Total
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in OrdenVentaListPorFecha">
                        <td>{{item.ID_Orden}}</td>
                        <td>{{item.FechaEmision}}</td>
                        <td>{{item.Total}}</td>
                        <td align="center">
                            <input type="radio"
                                   ng-click="Select(item)"
                                   ng-checked="item.checked">
                        </td>
                    </tr>
                </tbody>
            </table>


            <div class="modal-footer">
                <button class="btn btn-primary" ng-click="ok()">Aceptar</button>
                <button class="btn btn-warning" ng-click="cancel()">Cancelar</button>
            </div>
        </div>





    </div>
</div>

